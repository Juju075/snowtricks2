<div class="container mt-2">
  <a name="haut">...</a>
  {% if tricks|length > 0 %}
    <h2 class="flex mx-auto border">{{ pluralize(tricks | length, "Trick") }}</h2>
  {# row #}
  {% for row in tricks|batch(4)%} 
  <div class="d-flex">
    {% for trick in row %}

    <div class="card ml-2" style="width: 18rem">
      <a href="{{ path('app_tricks_show', { slug: trick.slug }) }}">
        <img
          class="card-img-top"
          src="{{ asset('/build/images/placeholder.29b24e4f.jpg')|imagine_filter('squared_thumbnail_medium')}}"
          alt="Image link show ici"
        />
      </a>
      <div class="card-body">
        <h5 class="card-title">{{ trick.nom }}</h5>
        <p class="card-text">Description tronque ?</p>
        <a
          href="{{ path('app_tricks_edit', { slug: trick.slug }) }}"
          class="btn btn-primary"
          >Edit</a
        >
        <a
          href="{{ path('app_tricks_delete', { slug: trick.slug }) }}"
          class="btn btn-primary"
          >Supprimer</a
        >
      </div>
    </div>
  {% endfor %}
  </div>
 {% endfor %} {# fermeture #} {% else %}{% endif %}
</div>
