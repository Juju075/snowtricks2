{% extends 'layouts/base.html.twig' %} {% block title %}'Best tricks learing!'{%
endblock %} {% block body %}
<h1>Effects in JQuery</h1>
<img
  src="https://i.picsum.photos/id/229/200/200.jpg?hmac=b3V9uXS2Q1EA1tLHxvWjTgBF4TphN4ibxTjDv2PO2jg"
  alt="javascript"
  id="img1"
  width="250px"
/>
<!-- en jquery -->
<button id="btn1">Hide</button>
<button id="btn2">Show</button>
<button id="btn3">Toogle</button>
<br /><br />
<button id="btn4">Fade-in</button>
<button id="btn5">Fade-out</button>
<button id="btn6">SlideUp</button>
<button id="btn7">SlideDown</button>
<button id="btn8">SlideToogle</button>
<button id="btn9">SlideUp</button>
<button id="btn10">Stop</button>
<!-- ===================================================================== -->
{% endblock %}{% block javascripts %} {{ parent() }}
<script>
  /** Document charge > >button click >appel d'une fonction >execution du code */
  $(document).ready(function () {
    $("#btn1").click(function () {
      $("#img1").hide(2000);
    });

    $("#btn2").click(function () {
      $("#img1").show(2000);
    });

    $("#btn3").click(function () {
      $("#img1").toogle(3000);
    });
    /**Fade in Fade out*/
    /***/
    $("#btn4").click(function () {
      $("#img1").fadeIn(2000);
    });

    $("#btn5").click(function () {
      $("#img1").fadeOut(2000);
    });
    $("#btn6").click(function () {
      $("#img1").fadeOut(2000);
    });

    /***/
    $("#btn7").click(function () {
      $("#img1").SlideUp(2000);
    });
    $("#btn8").click(function () {
      $("#img1").SlideDown(2000);
    });
    $("#btn9").click(function () {
      $("#img1").SlideToogle(2000);
    });
    $("#btn10").click(function () {
      $("#img1").stop();
    });
  });

  /**Animation*/
  $("document").ready(function () {
    $("#btn").click(function () {
      $("img").animate(
        {
          left: "150px",
          opacity: "1",
          height: "400px",
          width: "400px",
        },
        2000
      );
    });
  });
</script>
{% endblock %}
