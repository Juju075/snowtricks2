{{ include("layouts/partials/_nav.html.twig") }}

<!-- ======================================================================= -->
<!-- new card-->
<!-- ======================================================================= -->
<div>
  <ul class="cards">
    <li>
      <a href="" class="card">
        <img src="https://i.imgur.com/oYiTqum.jpg" class="card__image" alt="" />
        {# Background image #}

        <div class="card__overlay">
          <div class="card__header">
            <svg class="card__arc" xmlns="http://www.w3.org/2000/svg">
              <path />
            </svg>
            <img
              class="card__thumb"
              src="https://i.imgur.com/7D7I6dI.png"
              alt=""
            />
            {# Avatar #}
            <div class="card__header-text">
              <h3 class="card__title">Jessica Parker</h3>
              <span class="card__status">1 hour ago</span>
            </div>
          </div>
          <p class="card__description">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Asperiores,
            blanditiis?
          </p>
        </div>
      </a>
    </li>
  </ul>
</div>

<!-- ======================================================================= -->
<!-- Content [Listing des articles] -->
<!-- ======================================================================= -->
<section class="content">
  <article
    class="container_project container_project--pall flex flex-jc-sb flex-ai-c"
  >
    <div class="row">
      <div class="cards">
        {% if tricks|length > 0 %} {# card here #} {% for trick in tricks %}

        <div>
          <div>
            <div>{{ trick.nom }}</div>
            <a href=" {{ path('app_tricks_show', { id: trick.id }) }}">
              <img
                src="{{ asset('/build/images/placeholder.29b24e4f.jpg')|imagine_filter('squared_thumbnail_medium')}}"
                alt="{{ trick.nom }}"
              />
              {# trick.photo numero 1 get photo #}
            </a>
          </div>
          <div>
            <a href=" {{ path('app_tricks_edit', { id: trick.id }) }}">Edit</a>
            <a href=" {{ path('app_tricks_delete', { id: trick.id }) }}"
              >Delete</a
            >
          </div>
        </div>

        {% endfor %} {% else %}
        <p class="">
          No Trick yet
          <a href=" {{ path('app_tricks_create') }}">Be the first! </a>
        </p>
        {% endif %}
      </div>
    </div>

    <div class="content">
      {# {{ include("layouts/partials/_nav.html.twig") }} #} {#
      https://codepen.io/ig_design/pen/VwedgWj #}
    </div>
  </article>
</section>
